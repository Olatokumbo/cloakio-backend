{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"esModuleInterop": true,
		// "strict": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"strictPropertyInitialization": false,
		"noImplicitAny": false,
		"lib": ["es2019"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["functions", "dist/**/*"]
}
